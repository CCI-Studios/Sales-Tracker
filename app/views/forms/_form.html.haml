= form_for([@campaign, @form]) do |f|
	= render 'shared/form_errors'

	.field
		= f.label :name
		= f.text_field :name
		
	.field
		= f.label :width
		= f.text_field :width
		
	.field
		= f.label :height
		= f.text_field :height
		
	.field
		= f.label :read_only
		= f.check_box :read_only
		
	.field
		= f.label :default
		= f.check_box :default
		
	.action
		= f.submit
		
		
	- if !@form.new_record?
		= render 'static_form', :f => f
		
		.action
			= f.submit
