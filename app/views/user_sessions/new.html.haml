%h1 Login

= form_for @user_session do |f|
	- if @user_session.errors.any?
		#error_explanation
			%h2= "#{pluralize(@user_session.errors.count, "error")} prohibited this session from being created:"

			%ul
				- @user_session.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label :email
		%br
		= f.text_field :email

	.field
		= f.label :password
		%br
		= f.password_field :password

	.field
		= f.check_box :remember_me
		= f.label :remember_me

	.action
		= f.submit "Login"
		