= form_for(@sale) do |f|
	- if @sale.errors.any?
		#error_explanation
			%h2= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"

			%ul
				- @sale.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label :total
		%br
		= f.text_field :total

	.field
		= f.label :company_id
		%br
		= f.text_field :company_id

	.field
		= f.label :campaign_id
		%br
		= f.text_field :campaign_id

	.actions
		= f.submit