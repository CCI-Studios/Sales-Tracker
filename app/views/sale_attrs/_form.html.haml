= form_for([@campaign, @attr]) do |f|
	- if @attr.errors.any?
		#error_explanation
			%h2= "#{pluralize(@attr.errors.count, "error")} prohibited this attribute from being saved:"
			%ul
				- @attr.errors.full_messages.each do |msg|
					%li= msg
					
					
	.field
		= f.label :title
		%br
		= f.text_field :title
		
	.field
		= f.label :kind
		%br
		= f.text_field :kind
		
	.field
		= f.label :default
		%br
		= f.text_field :default
		
	.field
		= f.label :required
		%br
		= f.check_box :required
		
	.actions
		= f.submit