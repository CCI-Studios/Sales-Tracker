<p id="notice"><%= notice %></p>

<h1>
	<%= @campaign.title %>
	<small><%= link_to 'Edit', edit_campaign_path(@campaign) %></small>
</h1>

<p>
  <b>Start date:</b> <%= @campaign.start_date %><br>
  <b>End date:</b> <%= @campaign.end_date %>
</p>

<h2>Revenue Details</h2>
<p>
	Total Contacts: <%= @campaign.attempts.count %><br>
	Total Sales: <%= number_to_currency @campaign.total_revenue %><br>
	Revenue/Contact: <%= @campaign.revenue_per_contact %><br>
</p>

<h2>Contacts Details</h2>
<p>
	Avg Calls Per Active Day: <%= number_with_precision @campaign.avg_calls_per_day, :precision => 2 %>
</p>

<p><%= link_to 'Campaigns', campaigns_path %></p>