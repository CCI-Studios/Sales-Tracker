<%= form_for(@attempt) do |f| %>
  <% if @attempt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attempt.errors.count, "error") %> prohibited this attempt from being saved:</h2>

      <ul>
      <% @attempt.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label :campaign_name %>
		<%= text_field_with_auto_complete :attempt, :campaign_name,
			{ :size => 15 },
			{ :url => campaigns_path(:json), 
				:method => :get, 
				:tokens => %w[title],
				:with => "'search=' + element.value" } %>
	</div>
	
	<div class="field">
		<%= f.label :contact_name %>
		<%= text_field_with_auto_complete :attempt, :contact_name,
			{ :size => 15 },
			{ :url => contacts_path(:json), 
				:method => :get, 
				:tokens => %w[fullname],
				:with => "'search=' + element.value" } %>
	</div>
	
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>
	<div class="field">
    <div class="checkbox"><%= f.label :phone %> <%= f.check_box :phone %></div>
    <div class="checkbox"><%= f.label :email %> <%= f.check_box :email %></div>
    <div class="checkbox"><%= f.label :fax %> <%= f.check_box :fax %></div>
		<div class="clear"></div>
  </div>

	<h2>Sales Stats</h2>
	<div class="field">
		<%= f.label :success %>
		<%= f.check_box :success %>
	</div>
	<div>
		<div class="field">
			<%= f.label :value %>
			<%= f.text_field :value %>
		</div>
		<div class="field">
			<%= f.label :carrot %>
			<%= f.text_field :carrot %>
		</div>
	</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
