<%= form_for(@attempt) do |f| %>
  <% if @attempt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attempt.errors.count, "error") %> prohibited this attempt from being saved:</h2>

      <ul>
      <% @attempt.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label :campaign_name %>
		<%= f.autocomplete_field :campaign_name, autocomplete_campaign_title_attempts_path %>
	</div>
	
	<div class="field">
		<%= f.label :company_name %>
		<%= f.autocomplete_field :company_name, autocomplete_company_title_attempts_path %>
	</div>
	
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>
	<div class="field">
    <div class="checkbox"><%= f.label :phone %> <%= f.check_box :phone %></div>
    <div class="checkbox"><%= f.label :email %> <%= f.check_box :email %></div>
    <div class="checkbox"><%= f.label :fax %> <%= f.check_box :fax %></div>
		<div class="clear"></div>
  </div>

	<h2>Sales Stats</h2>
	<div class="field">
		<%= f.label :success %>
		<%= f.check_box :success %>
	</div>
	<div>
		<div class="field">
			<%= f.label :value %>
			<%= f.text_field :value %>
		</div>
		<div class="field">
			<%= f.label :carrot %>
			<%= f.text_field :carrot %>
		</div>
	</div>
	
	<h2>Purchase Details</h2>
	<table>
		<tr>
			<th>Type</th>
			<th>Units</th>
			<th>Avg. Value</th>
		</tr>
		
		<tr>
			<td>Off Campus Listing</td>
			<td><%= f.text_field :off_campus %></td>
			<td><%= f.text_field :off_campus_value %></td>
		</tr>
		<tr>
			<td>Off Campus Featured Listing</td>
			<td><%= f.text_field :off_campus_featured %></td>
			<td><%= f.text_field :off_campus_featured_value %></td>
		</tr>
		
		<tr>
			<td>Restaurant Listing</td>
			<td><%= f.text_field :restaurant %></td>
			<td><%= f.text_field :restaurant_value %></td>
		</tr>
		<tr>
			<td>Restaurant Featured Listing</td>
			<td><%= f.text_field :restaurant_featured %></td>
			<td><%= f.text_field :restaurant_featured_value %></td>
		</tr>
		
		<tr>
			<td>Service Listing</td>
			<td><%= f.text_field :services %></td>
			<td><%= f.text_field :services_value %></td>
		</tr>
		<tr>
			<td>Service Featured Listing</td>
			<td><%= f.text_field :services_featured %></td>
			<td><%= f.text_field :services_featured_value %></td>
		</tr>
		
		<tr>
			<td>Ads</td>
			<td><%= f.text_field :ads %></td>
			<td><%= f.text_field :ads_value %></td>
		</tr>
		
		<tr>
			<td>Email Blasts</td>
			<td><%= f.text_field :email_blast %></td>
			<td><%= f.text_field :email_blast_value %></td>
		</tr>
	</table>
	

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
