<h1>Listing attempts</h1>

<table>
  <tr>
    <th>Time</th>
    <th>User</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Fax</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attempts.each do |attempt| %>
  <tr>
    <td><%= attempt.time %></td>
    <td><%= attempt.user_id %></td>
    <td><%= attempt.email %></td>
    <td><%= attempt.phone %></td>
    <td><%= attempt.fax %></td>
    <td><%= link_to 'Show', attempt %></td>
    <td><%= link_to 'Edit', edit_attempt_path(attempt) %></td>
    <td><%= link_to 'Destroy', attempt, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

